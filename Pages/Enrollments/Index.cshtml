@page
@model Student_Management.Pages.Enrollments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Enrollments</h2>

<p>
    <a class="btn btn-outline-primary" asp-page="Create">Enroll Student to Course</a>
</p>
<table class="table table-striped table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enrollment[0].Semester)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Enrollment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseSerialId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentSerialId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-primary" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-outline-primary" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
