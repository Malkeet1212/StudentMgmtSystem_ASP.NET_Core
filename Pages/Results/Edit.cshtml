<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Result.Id" />
            <div class="form-group">
                <label asp-for="Result.CourseId" class="control-label"></label>
