                <span asp-validation-for="Result.CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.StudentId" class="control-label"></label>
                <select asp-for="Result.StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                <span asp-validation-for="Result.StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Result.Grade" class="control-label"></label>
                <select asp-for="Result.Grade" class="form-control" asp-items="ViewBag.Grade"></select>
                <span asp-validation-for="Result.Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
